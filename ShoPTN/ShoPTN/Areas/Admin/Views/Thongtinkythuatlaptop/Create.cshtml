@model ShoPTN.Models.Thongtinkythuatlaptop

@{
    ViewData["Title"] = "Create";
}

<div class="card border border-primary">
    <h5 class="card-header bg-primary text-white">@ViewData["Title"]</h5>
    <div class="card-body">
        <div class="row">
            <div class="col-md-12">
                <form asp-action="Create">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-group">
                        <label asp-for="IdProduct" class="control-label"></label>
                        <select asp-for="IdProduct" class="form-control" asp-items="ViewBag.IdProduct"></select>
                    </div>
                    <div class="form-group">
                        <label asp-for="Cpu" class="control-label"></label>
                        <input asp-for="Cpu" class="form-control" />
                        <span asp-validation-for="Cpu" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Ram" class="control-label"></label>
                        <input asp-for="Ram" class="form-control" />
                        <span asp-validation-for="Ram" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="ManHinh" class="control-label"></label>
                        <input asp-for="ManHinh" class="form-control" />
                        <span asp-validation-for="ManHinh" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Gpu" class="control-label"></label>
                        <input asp-for="Gpu" class="form-control" />
                        <span asp-validation-for="Gpu" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Rom" class="control-label"></label>
                        <input asp-for="Rom" class="form-control" />
                        <span asp-validation-for="Rom" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="KichThuoc" class="control-label"></label>
                        <input asp-for="KichThuoc" class="form-control" />
                        <span asp-validation-for="KichThuoc" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="XuatXu" class="control-label"></label>
                        <input asp-for="XuatXu" class="form-control" />
                        <span asp-validation-for="XuatXu" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="NamRaMat" class="control-label"></label>
                        <input asp-for="NamRaMat" class="form-control" />
                        <span asp-validation-for="NamRaMat" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <input type="submit" value="Create" class="btn btn-primary" /> || <a asp-action="Index" class="btn btn-primary">Trở về danh sách</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
