@model ShoPTN.Models.InfomationTechology

@{
    ViewData["Title"] = "Sửa bài viết";
}

<div class="card border border-primary">
    <h5 class="card-header bg-primary text-white">@ViewData["Title"]</h5>
    <div class="card-body">
        <div class="row">
            <div class="col-md-12">
                <form asp-action="Edit" enctype="multipart/form-data">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <input type="hidden" asp-for="IdBaiViet" />
                    <div class="form-group">
                        <label asp-for="Title" class="control-label"></label>
                        <input asp-for="Title" class="form-control" />
                        <span asp-validation-for="Title" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="NgayDang" class="control-label"></label>
                        <input asp-for="NgayDang" class="form-control" />
                        <span asp-validation-for="NgayDang" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="NoiDung" class="control-label"></label>
                        <textarea asp-for="NoiDung" class="form-control" id="editor"></textarea>
                        <span asp-validation-for="NoiDung" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Avatar" class="control-label"></label>
                        <input asp-for="Avatar" type="file" name="file" accept=".jpg,.jpeg,.png" />
                        <input asp-for="LuotXem" type="hidden" />
                        <input asp-for="Avatar" type="hidden" />
                        <span asp-validation-for="Avatar" class="text-danger"></span>
                        @if (!String.IsNullOrEmpty(ViewData.ModelState["ErrorExit"].Errors[0].ErrorMessage))
                        {
                            <div class="alert alert-danger alert-dismissible fade show mt-3" role="alert">
                                <strong>@ViewData.ModelState["ErrorExit"].Errors[0].ErrorMessage</strong>
                                <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                                    <span aria-hidden="true">&times;</span>
                                </button>
                            </div>
                        }
                        <img src="~/Images/BaiViet/@Model.Avatar" width="100" />
                    </div>
                    <div class="form-group">
                        <label asp-for="TinhTrang" class="control-label"></label>
                        <select asp-for="TinhTrang" class="form-control">
                            <option value="0">Bài viết mới</option>
                            <option value="1">Đã Duyệt</option>
                            <option value="2">Hủy duyết</option>
                        </select>
                        <span asp-validation-for="TinhTrang" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <input type="submit" value="Cập nhật" class="btn btn-primary" /> || <a asp-action="Index" class="btn btn-primary">Trở về danh sách</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

<script>
    CKEDITOR.replace('editor', {
        height: 200
    });
</script>
