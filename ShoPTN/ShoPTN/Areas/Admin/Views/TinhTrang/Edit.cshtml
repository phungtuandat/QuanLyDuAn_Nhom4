@model ShoPTN.Models.TinhTrang

@{
    ViewData["Title"] = "Sửa " + Model.TenTt;
}

<div class="card border border-primary">
    <h5 class="card-header bg-primary text-white">@ViewData["Title"]</h5>
    <div class="card-body">
        <div class="col-md-12">
            <form asp-action="Edit">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="MaTt" />
                <div class="form-group">
                    <label asp-for="TenTt" class="control-label"></label>
                    <input asp-for="TenTt" class="form-control" />
                    <span asp-validation-for="TenTt" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="ChuTich" class="control-label"></label>
                    <input asp-for="ChuTich" class="form-control" />
                    <span asp-validation-for="ChuTich" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input type="submit" value="Cập nhật" class="btn btn-primary" /> || <a asp-action="Index" class="btn btn-primary">Trở về danh sách</a>
                </div>
            </form>
        </div>
    </div>
</div>

    @section Scripts {
        @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    }
