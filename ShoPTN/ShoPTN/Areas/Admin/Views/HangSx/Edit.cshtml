@model ShoPTN.Models.HangSx

@{
    ViewData["Title"] = "Sửa " + Model.TenHang;
}

<div class="card border border-primary">
    <h5 class="card-header bg-primary text-white">@ViewData["Title"]</h5>
    <div class="card-body">
        <div class="col-md-4">
            <form asp-action="Edit">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="Id" />
                <div class="form-group">
                    <label asp-for="TenHang" class="control-label"></label>
                    <input asp-for="TenHang" class="form-control" />
                    <span asp-validation-for="TenHang" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="ChuThich" class="control-label"></label>
                    <input asp-for="ChuThich" class="form-control" />
                    <span asp-validation-for="ChuThich" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="TinhTrang" class="control-label"></label>
                    <select asp-for="TinhTrang" class="form-control">
                        <option value="1">Ẩn</option>
                        <option value="2">Hiện</option>
                    </select>
                    <span asp-validation-for="TinhTrang" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input type="submit" value="Cập nhật " class="btn btn-primary" /> ||  <a asp-action="Index" class="btn btn-primary">Trở về danh sách</a>
                </div>
            </form>
        </div>
    </div>
</div>

    @section Scripts {
        @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    }
