@model ShoPTN.Models.NhanVien

@{
    ViewData["Title"] = "Quản lý nhân viên";
}

<div class="card border border-primary">
    <h5 class="card-header bg-primary text-white">@ViewData["Title"]</h5>
    <div class="card-body">
        <div class="col-md-12">
            <form asp-action="Edit" enctype="multipart/form-data">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="IdStaff" />
                <div class="form-group">
                    <label asp-for="HoVaTen" class="control-label"></label>
                    <input asp-for="HoVaTen" class="form-control" />
                    <span asp-validation-for="HoVaTen" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="DienThoai" class="control-label"></label>
                    <input asp-for="DienThoai" class="form-control" />
                    <span asp-validation-for="DienThoai" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="DiaChi" class="control-label"></label>
                    <input asp-for="DiaChi" class="form-control" />
                    <span asp-validation-for="DiaChi" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="TenDangNhap" class="control-label"></label>
                    <input asp-for="TenDangNhap" class="form-control" />
                    <span asp-validation-for="TenDangNhap" class="text-danger"></span>
                    @if (!String.IsNullOrEmpty(ViewData.ModelState["ErrorExitTDN"].Errors[0].ErrorMessage))
                    {
                        <div class="alert alert-danger alert-dismissible fade show mt-3" role="alert">
                            <strong>@ViewData.ModelState["ErrorExitTDN"].Errors[0].ErrorMessage</strong>
                            <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                                <span aria-hidden="true">&times;</span>
                            </button>
                        </div>
                    }
                </div>
                <div class="form-group">
                    <label asp-for="MatKhau" class="control-label"></label>
                    <input asp-for="MatKhau" class="form-control" />
                    <span asp-validation-for="MatKhau" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Avartar" class="control-label"></label>
                    <input asp-for="Avartar" class="form-control" type="hidden" />
                    <br />
                    <input asp-for="Avartar" type="file" name="file" accept=".jpg,.jpeg,.png" />
                    <br />
                    <span asp-validation-for="Avartar" class="text-danger"></span>
                    @if (!String.IsNullOrEmpty(ViewData.ModelState["ErrorExit"].Errors[0].ErrorMessage))
                    {
                        <div class="alert alert-danger alert-dismissible fade show mt-3" role="alert">
                            <strong>@ViewData.ModelState["ErrorExitTDN"].Errors[0].ErrorMessage</strong>
                            <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                                <span aria-hidden="true">&times;</span>
                            </button>
                        </div>
                    }
                    <img src="~/Images/Staff/@Model.Avartar" width="100"/>
                </div>
                <div class="form-group">
                    <label asp-for="Quyen" class="control-label"></label>
                    <select asp-for="Quyen" class="form-control">
                        <option value="True">Admin</option>
                        <option value="False">Nhân viên</option>
                    </select>
                    <span asp-validation-for="Quyen" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input type="submit" value="Cập nhật" class="btn btn-primary" /> || <a asp-action="Index" class="btn btn-primary">Trở về danh sách</a>
                </div>
            </form>
        </div>
    </div>
</div>

    @section Scripts {
        @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    }
