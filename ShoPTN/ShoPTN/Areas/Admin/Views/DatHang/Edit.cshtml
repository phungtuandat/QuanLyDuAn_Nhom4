@model ShoPTN.Models.DatHang

@{
    ViewData["Title"] = "Sửa đặt hàng";
}

<div class="card border border-primary">
    <h5 class="card-header bg-primary text-white">@ViewData["Title"]</h5>
    <div class="card-body">
        <div class="row">
            <div class="col-md-4">
                <form asp-action="Edit">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <input type="hidden" asp-for="Id" />
                    <div class="form-group">
                        <label asp-for="KhachHangId" class="control-label"></label>
                        <select asp-for="KhachHangId" class="form-control" asp-items="ViewBag.KhachHangId"></select>
                        <span asp-validation-for="KhachHangId" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="DienThoaiGiaoHang" class="control-label"></label>
                        <input asp-for="DienThoaiGiaoHang" class="form-control" />
                        <span asp-validation-for="DienThoaiGiaoHang" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="DiaChiGiaoHang" class="control-label"></label>
                        <input asp-for="DiaChiGiaoHang" class="form-control" />
                        <span asp-validation-for="DiaChiGiaoHang" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="NgayDatHang" class="control-label"></label>
                        <input asp-for="NgayDatHang" class="form-control" />
                        <span asp-validation-for="NgayDatHang" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="TinhTrang" class="control-label"></label>
                        <select asp-for="TinhTrang" class="form-control">
                            <option value="0">Đơn hàng mới</option>
                            <option value="1">Đang xác nhận</option>
                            <option value="2">Đã hủy</option>
                            <option value="3">Đang đóng gói</option>
                            <option value="4">Đang gửi vận chuyển</option>
                            <option value="5">Đang chuyển</option>
                            <option value="6">Thất bại</option>
                            <option value="7">Đang chuyển hoàn</option>
                            <option value="8">Đã chuyển hoàn</option>
                            <option value="9">Thành công</option>
                        </select>
                        <span asp-validation-for="TinhTrang" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <input type="submit" value="Save" class="btn btn-primary" /> || <a asp-action="Index">Trở về danh sách</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

        @section Scripts {
            @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
        }
