@model IEnumerable<ShoPTN.Models.DatHangChiTiet>
@{
    ViewBag.Title = "Đơn chi tiết";
    //ViewBag.NameCustomer là một đặt hàng
    var customer = (DatHang)ViewBag.NameCustomer;
    // danh sách Thongtinkythuat
}
<div class="card mt-3 shadow border border-info">
    <h5 class="card-header bg-info text-white text-center font-weight-bold mt-3">@ViewBag.Title</h5>
    <div class="card-body">
        <h5 class="text-center text-danger" style="font-weight:bold;">THÔNG TIN HÓA ĐƠN</h5>
        <h5 class="text-center text-danger" style="font-weight:bold;">CỬA HÀNG LAPTOP TẤN PHÁT</h5>
        <h6 class="text-center text-danger" style="font-size:15px;text-align:center;">Địa chỉ : Thửa 365, tờ bản đồ số 41, đường Dự Định, khu dân cư Xẻo Trôm 1, 2, phường Mỹ Phước, thành phố Long Xuyên, tỉnh An Giang</h6>
        <div class="card-deck">
            <h5 class="font-weight-light">Mã Đặt hàng: @customer.Id</h5>
            <h5 style="font-weight:bold;" class="mt-3">Họ tên khách hàng: @customer.KhachHang.HoVaTen</h5>
            <div class="row mt-3">
                <h5><b class="text-center">Thông tin hóa đơn</b></h5>
                @{ int sum_money = 0;}
                <table style="margin-left:20px;width:1620px;" class="table table-bordered">
                    <tr>
                        <th>Tên sản phẩm</th>
                        <th>Đơn giá</th>
                        <th>Số lượng</th>
                        <th>Thành tiền</th>
                    </tr>
                    @foreach (var item in Model)
                    {
                        // truy xuất giữa các bảng
                        <tr>
                            <td>@item.LapTop.TenSanPham</td>
                            <td>@item.LapTop.GiaBan</td>
                            <td>@item.SoLuong</td>
                            <td>@(item.SoLuong * item.LapTop.GiaBan)</td>
                        </tr>
                        sum_money += item.ThanhTien.Value;
                    }
                </table>
                <hr class="mt-3" />
                <h5 style="margin-left:1370px;">Tổng tiền: <b>@sum_money.ToString("N0")đ</b></h5>
            </div>

        </div>
    </div>
</div>
