@model ICollection<ShoPTN.Models.InfomationTechology>
@{
    ViewBag.Title = "Bài viết công nghệ";
}
    <div class="card mt-3">
        <h5 class="card-header bg-info text-white" style="font-size:20px;">@ViewBag.Title</h5>
        <div class="card-body">
            @if (Model.Count() > 0)
            {
                <div class="row">
                    @foreach (var item in Model)
                    {
                        <div class="col-6">
                            <div class="media">
                                <img src="~/Images/BaiViet/@item.Avatar" class="mr-3" width="150">
                                <div class="media-body">
                                    <a class="btn mt-0" asp-route-id="@item.IdBaiViet" asp-action="ChiTietBaiViet">@item.Title</a>
                                    <p style="margin-left:145px;">Ngày đăng: @item.NgayDang</p>
                                    <p style="margin-left:145px;">Lượt xem: @item.LuotXem</p>
                                </div>
                            </div>
                        </div>
                    }
                </div>
            }
            else
            {
                <span class="badge badge-danger"style="font-size:18px;">Không có bài viết nào</span>
            }
        </div>
    </div>
